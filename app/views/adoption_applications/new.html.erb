<%= form_tag "/adoption_applications/new", method: :post do %>
  <p><%= label_tag "Select the pet(s) you'd like to apply to adopt:" %> <br>
  <%= select_tag "pet_ids[]", options_for_select(@favorites.collect{ |favorite| [favorite.name, favorite.id] }), multiple: :true %></p>
  <br>
  <%= label_tag :name %>
  <%= text_field_tag :name%>
  <br>
  <%= label_tag :address %>
  <%= text_field_tag :address %>
  <br>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <br>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <br>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %>
  <br>
  <%= label_tag :phone %>
  <%= text_field_tag :phone %>
  <br>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <br>
  <br>
  <%= submit_tag 'Submit Application' %>
<% end %>
