<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
    <navbar>
    <%= link_to "| Home |", "/" %>
    <%= link_to "| Pet Index |", "/pets" %>
    <%= link_to "| Shelter Index |", "/shelters" %>
    </navbar>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
        <%= yield %>
  </body>
</html>
