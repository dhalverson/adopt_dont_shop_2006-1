
<h3>Shelter: <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h3>
<hr>
<% @shelter.pets.each do |pet| %>
  <%= image_tag(pet.image, alt: "pet picture", method: :get, class: 'pet-image') %>
  <p>Name: <%= pet.name %></p>
  <p>Description: <%= pet.description %></p>
  <p>Age: <%= pet.age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Adoption Status: <%= pet.status %></p><hr>
  <p><%= link_to "Update Pet", "/pets/#{pet.id}/edit" %></p>
  <p><%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %></p>
<% end %>

<p><%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %></p>